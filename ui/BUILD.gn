group("ui") {
  deps = [
    ":index",
    ":css",
    ":js",
  ]
}

copy("index") {
  sources = ["perfetto.html"]
  outputs = ["$root_out_dir/ui/index.html"]
}

copy("css") {
  sources = ["perfetto.css"]
  outputs = ["$root_out_dir/ui/perfetto.css"]
}

copy("js") {
  sources = ["perfetto.js"]
  outputs = ["$root_out_dir/ui/perfetto.js"]
}
